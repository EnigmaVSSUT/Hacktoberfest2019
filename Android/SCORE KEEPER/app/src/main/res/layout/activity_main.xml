<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="550dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#616161"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scoreA"
                android:layout_marginTop="5dp"
                android:text="0 / 0"
                android:gravity="center_horizontal"
                android:textSize="56sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1 RUN"
                android:textSize="22sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:onClick="oneRunA" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 RUN"
                android:onClick="twoRunA"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 RUN"
                android:onClick="fourRunA"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 RUN"
                android:onClick="sixRunA"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WICKET"
                android:onClick="wicketA"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overA"
                android:text="0.0 over"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#616161"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="550dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="550dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:textColor="#616161"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scoreB"
                android:text="0 / 0"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="56sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 RUN"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textSize="22sp"
                android:onClick="oneRunB"/>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="2 RUN"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:onClick="twoRunB"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 RUN"
                android:onClick="fourRunB"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 RUN"
                android:onClick="sixRunB"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WICKET"
                android:onClick="wicketB"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overB"
                android:text="0.0 over"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#616161"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="RESET"
        android:onClick="reset"
        android:textSize="22sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="RESULT"
        android:onClick="result"
        android:textSize="22sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN PROGRESS"
        android:layout_gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:id="@+id/result"/>
</LinearLayout>